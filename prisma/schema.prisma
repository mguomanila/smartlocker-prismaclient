datasource db{
  provider =  "postgresql"
  url =  env("DATABASE_URL")
}

generator client {
  provider =  "prisma-client-js"
}

model User {
  id      Int  @id @default(autoincrement())
  name    String?
  email   String  @unique
}

enum LockerType {
  LockerType1 = 'lockertype1',
  LockerType2 = 'lockertype2',
  LockerType3 = 'lockertype3',
}

model LockerTimeLimit {
  id Int @id @default(autoincrement())
  lockerType String
  pickupTimeLimit Int
  pickupReclaimTimeLimit Int
  bookingExpiry Int
  shipoutTimeLimit Int
  shipoutReclaimTimeLimit Int
  storageTimeLimit Int
  storageReclaimTimeLimit Int
}

model LockerUserType {
  id Int @id @default(autoincrement())
  lockerUserType String @db.VarChar(64)
  description String
  monthlyFee Decimal @db.Decimal(12, 2)
}

model CourierType {
  id Int @id @default(autoincrement())
  lockerType LockerType
  courierType String @db.VarChar(64)
  description String
  monthlyFee Decimal  @db.Decimal(12, 2)
}